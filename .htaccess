# Prevent access to hidden files (e.g., .env, .git, .htaccess, etc.)
<FilesMatch "^\.">
  Require all denied
</FilesMatch>

# Enable URL rewriting
RewriteEngine On
RewriteBase /new/

# If the request is for the root URL, internally redirect to /public (without showing /public in the URL)
RewriteCond %{REQUEST_URI} ^/$
RewriteRule ^$ /new/public/ [L]

# Redirect all other requests to the public folder (without exposing the /public folder in the URL)
RewriteCond %{REQUEST_URI} !^/new/public/
RewriteCond %{REQUEST_URI} !\.(png|jpg|jpeg|gif|css|js|woff2?|ttf|svg|eot|otf)$
RewriteRule ^(.*)$ /new/public/$1 [L]
